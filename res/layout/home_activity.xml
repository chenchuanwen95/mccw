<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.ccw.happy.activity.HomeActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/act_home_fl"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#c2c2c2" />

    <LinearLayout
        android:id="@+id/act_home_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/act_home_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onclick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_iv1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:background="@drawable/k1" />

            <TextView
                android:id="@+id/act_home_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:text="主页"
                android:textColor="#EE8414" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_l2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onclick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_iv2"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:background="@drawable/g2" />

            <TextView
                android:id="@+id/act_home_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="消息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_l0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:onClick="onclick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_iv0"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/g5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_l3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onclick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_iv3"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:background="@drawable/g3" />

            <TextView
                android:id="@+id/act_home_tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:text="我的" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_l4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onclick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_iv4"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:background="@drawable/g4" />

            <TextView
                android:id="@+id/act_home_tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>