<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.ccw.happy.view.MyImageView
            android:id="@+id/admin_tolun_item_usericon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/a1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/admin_tolun_item_username"
                android:layout_width="180dip"
                android:layout_height="25dip"
                android:text="用户名称"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/admin_tolun_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="发送时间:"
                android:textColor="#99000000"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/admin_tolun_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="2dip"
        android:text="hahahahahahahahahahahahahahahahahah"
        android:textColor="#99000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/tiaoxing" />

</LinearLayout>