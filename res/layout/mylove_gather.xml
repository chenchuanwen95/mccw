<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/mylove_gather_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EE8414"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mylave_gather_gobye"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/houtui" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mylove_gather_title"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="我的活动"
            android:textSize="20sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mylave_gather_add"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/add" />
    </LinearLayout>

    <ListView
        android:id="@+id/mylove_gather_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mylove_gather_title1"
        android:visibility="invisible" >
    </ListView>

    <LinearLayout
        android:id="@+id/mylove_gather_liearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mylove_gather_title1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mylove_gather_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading_01" />
    </LinearLayout>

    <TextView
        android:id="@+id/mylove_gather_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mylove_gather_title1"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:paddingTop="60dip"
        android:text="正在加载中."
        android:textSize="16sp" />

</RelativeLayout>