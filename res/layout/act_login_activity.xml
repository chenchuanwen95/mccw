<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/a006"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:textSize="30sp"
        android:textColor="#efef3f"
        android:text="用 户 登 录" />

   <!--  <ImageView
        android:id="@+id/act_login_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:src="@drawable/touxiang" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" >

            <EditText
                android:singleLine="true"
                android:id="@+id/act_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:padding="10dp"
                android:background="#ffdc35"
                android:hint="输入账号:"/>

            <ImageView
                android:id="@+id/act_login_iv2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/login_user" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="5dip"
            >

            <EditText
                android:id="@+id/act_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:singleLine="true"
                android:padding="10dp"
                android:background="#ffdc35"
                android:inputType="textPassword"
                android:hint="输入密码:"/>

            <ImageView
                android:id="@+id/act_login_iv3"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/login_key" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dip" >

        <CheckBox
            android:id="@+id/act_login_cb"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:text="记住密码" />

        <Button
            android:id="@+id/act_login_login"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:background="#ffdc35"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="登    录" />
        
    </RelativeLayout>
	<View android:layout_width="match_parent"
	    android:layout_height="0dp" 
	    android:layout_weight="1"/>
    <TextView
        android:id="@+id/act_login_reger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:textStyle="italic"
        android:textColor="@drawable/reger_selector"
        android:clickable="true"
        android:text="@string/reger" />
	
</LinearLayout>