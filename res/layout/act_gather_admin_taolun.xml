<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EE8414"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_gather_admin_taolun_gobye"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.3"
            android:contentDescription="@string/app_name"
            android:src="@drawable/houtui" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/act_gather_admin_taolun_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="活动讨论区"
            android:textSize="20sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.5" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="0.2"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <ListView
        android:id="@+id/act_gather_admin_taolun_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/act_gather_admin_taolun_sms"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="7dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn_more_selector"
            android:paddingBottom="3dip"
            android:paddingLeft="5dip"
            android:paddingRight="13dip"
            android:paddingTop="3dip"
            android:textSize="20sp" />

        <Button
            android:id="@+id/act_gather_admin_taolun_send"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_marginRight="10dip"
            android:text="发送"
            android:background="@drawable/btn_more_selector"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip" />

</LinearLayout>