<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EE8414"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#EE8414"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="发布活动"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/act_send_gether_ok"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="确认发布"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="#c2c2c2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_send_gather_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:layout_weight="1"
                    android:hint="输入活动名"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/act_send_gather_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2015-11-12"
                    android:textColor="#0000ff"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="#c2c2c2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_margin="5dip"
                android:text="活动简介:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="#c2c2c2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/act_send_gather_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入活动介绍(系统规定活动时间为24小时，如果超过时间不用理会。)"
                    android:padding="5dip" />

                <ImageView
                    android:id="@+id/act_send_gether_img"
                    android:layout_width="wrap_content"
                    android:layout_height="70dip"
                    android:layout_margin="5dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/highlighted" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="#c2c2c2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_margin="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点:"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/act_send_gether_tv_city"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0000ff"
                    android:textSize="18dip" />

                <ImageView
                    android:id="@+id/act_send_gether_map"
                    android:layout_width="30dip"
                    android:layout_height="25dip"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="#c2c2c2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/act_send_gather_money"
                            android:layout_width="120dip"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="活动经费"
                            android:padding="2dip"
                            android:singleLine="true" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="#000000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="18sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/act_send_gether_spinner"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>