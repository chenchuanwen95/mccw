<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EE8414"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_user_admin_gobye"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/houtui" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/act_user_admin_title"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="活动管理"
            android:textSize="20sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/act_user_admin_guanli"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:gravity="right|center_vertical"
            android:text="开启"
            android:textColor="#555555" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前参与  "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/act_user_admin_ren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#00f"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 人"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总资金  "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/act_user_admin_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#00f"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 元"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#c2c2c2" />

    <ListView
        android:id="@+id/act_user_admin_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#b2b2b2" />

    <RadioGroup
        android:id="@+id/act_user_admin_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.5" />

        <RadioButton
            android:id="@+id/act_user_admin_radio1"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:textColor="#F6D357"
            android:text="全部人员" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.3" />

        <RadioButton
            android:id="@+id/act_user_admin_radio2"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="已到人员" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.3" />

        <RadioButton
            android:id="@+id/act_user_admin_radio3"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="未到人员" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.3" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dip"
        android:background="#c2c2c2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/act_user_admin_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="7dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/btn_more_selector"
            android:hint="推送给全部人员"
            android:paddingBottom="3dip"
            android:paddingLeft="5dip"
            android:paddingRight="13dip"
            android:paddingTop="3dip"
            android:textSize="20sp" />

        <Button
            android:id="@+id/act_user_admin_send"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_more_selector"
            android:text="发送" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip" />

</LinearLayout>