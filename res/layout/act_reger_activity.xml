<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a006"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="用 户 注 册"
        android:textColor="#efef3f"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <EditText
                    android:id="@+id/act_reger_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="输入账户(6-12位)"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/act_reger_iv1"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cuowu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <EditText
                    android:id="@+id/act_reger_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="输入密码(6-18)"
                    android:inputType="textPassword"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/act_reger_iv2"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cuowu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <EditText
                    android:id="@+id/act_reger_password2"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/act_reger_iv3"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cuowu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <EditText
                    android:id="@+id/act_reger_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="输入Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/act_reger_iv4"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cuowu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <EditText
                    android:id="@+id/act_reger_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="输入手机号码(11位数字)"
                    android:inputType="phone"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/act_reger_iv5"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cuowu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="10dip" >

                <EditText
                    android:id="@+id/act_reger_yanzheng"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="#ffdc35"
                    android:gravity="center"
                    android:ems="10"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/act_reger_btn1"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="0.5"
                    android:background="#ffdc35"
                    android:text="获取验证码"
                    android:textColor="#0000ff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/act_reger_reger"
                    android:layout_width="130dp"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:textSize="18sp"
                    android:text="注册" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/act_reger_reset"
                    android:layout_width="130dp"
                    android:layout_height="40dip"
                    android:background="#ffdc35"
                    android:textSize="18sp"
                    android:text="重置" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>