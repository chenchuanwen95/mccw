<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:background="#ffffff"
        android:orientation="vertical" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.ccw.happy.view.MyImageView
                android:id="@+id/fragment_home_item_usericon"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/touxiang1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/fragment_home_item_gathername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里是活动的名称"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/fragment_home_item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:text="发布时间:"
                    android:textColor="#99000000"
                    android:textSize="13sp" />
                
            </LinearLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/fragment_home_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onclick"
                android:src="@drawable/zanqian" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_home_item_gatherimg"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:scaleType="fitXY"
            android:src="@drawable/default_jpg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fragment_home_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所需金额:998元" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_home_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="距离您:1000米" />

            <ImageView
                android:id="@+id/fragment_home_item_location_iv"
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:src="@drawable/location" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>